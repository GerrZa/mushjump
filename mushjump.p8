--main
function _init()
	state="start"
	
	startf=0
	
	plr={
	x=60,
	y=112,
	jf=40,
	vlx=0,
	vly=0,
	w=7,h=7,
	}
	
	plc={x=0,y=0,w=7,h=0}
	plf={}
	
	initplf()
	
	nxtplf=flr(rnd(5)+5)
	score=0
	nxth=100
	
	smk={}
end

function _update()
	if state=="game" then
		update_game()
	elseif state=="start" then
	 update_start()
	elseif state=="gameover" then
		update_gameover()
	end
	
end

function _draw()
	if state=="game" then
	 draw_game()
	elseif state=="start" then
	 draw_start()
	elseif state=="gameover" then
		draw_gameover()
	end
end

