--draw

function draw_game()
 line(0,50,128,50)
	for i=1,#plf do
		spr(2,plf[i].x,plf[i].y,3,1)
	end
	
	spr(1,plr.x,plr.y)	
	
	print(score.."m",3,44)
	
	for i in all(smk) do
 	i.x+=i.spd*i.d
	 circfill(i.x,i.y,i.sz,7)
	 i.l-=1
	 if (i.l<0) then del(smk,i) end
	end
	
end

function draw_start()
 cls()
 spr(1,plr.x,plr.y)
 for i=1,#plf do
 	spr(2,plf[i].x,plf[i].y,3,1)
 end
	startf+=1
	if startf>30 then
		startf=0
	elseif startf>10 then
		print("press❎/🅾️ to start",26,105+cos(0.25+time()*0.3)*2)
	end
	spr(17,48,10+cos(time()*0.3)*2,4,4)
end

function draw_gameover()
	cls()
	
	local x1=30
	local y1=30
	local x2=98
	local y2=100
	
	for i=1,#plf do
		spr(2,plf[i].x,plf[i].y,3,1)
	end
	
	rectfill(x1,y1,x2,y2,7)
	rectfill(x1+1,y1+1,x2-1,y2-1,0)
	
	print("gameover",48,40,7)
	print("score : "..score.."m",36,60,7)
	print("press🅾️/❎",45,80,7)
	print(" to restart",41,86,7)
	
end
