--update

function update_game()
 cls()
	if btn(➡️) then plr.vlx+=0.5 end
	if btn(⬅️) then plr.vlx-=0.5 end
	if not(btn(➡️) or btn(⬅️)) and plr.vlx!=0 then
		if plr.vlx>0 then
			plr.vlx-=0.5
		else
		 plr.vlx+=0.5
		end
	end
	
	if plr.vlx>2 then plr.vlx=2 end
	if plr.vlx<-2 then plr.vlx=-2 end
	
	plr.vly+=0.25
	
	move(plr)
	
	if plr.y<50 then
		plr.y=50
		score+=1
		nxtplf-=1
		nxth-=1
		for i in all(plf) do
			i.y-=plr.vly
			if i.y > 130 then
				del(plf,i)
			end
		for i in all(smk) do
		i.y+=1
		end
	end
end
	
	if nxtplf <= 0 then
		add(plf,{
		x=flr(rnd(104)),y=-8,
		w=24,h=8})
		nxtplf=flr(rnd(5)+10)
	end
	
	if plr.y >130 then
	 state="gameover"
	end
	
	if nxth<0 then
		nxth=100
		sfx(0)
	end
end

function update_start()
 if btn(🅾️) or btn(❎) then
 	state="game"
 	plr.vly=-5
 end
end

function update_gameover()
	if btn(🅾️) or btn(❎) then
		state="game"
		initplf()
		plr.vly=-5
		score=0
	end
	
end

